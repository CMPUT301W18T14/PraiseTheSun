<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TaskSearchDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/taskCardView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/searchTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/searchTaskPhoto"
                android:layout_toStartOf="@id/searchedTaskStatusIcon"
                android:text="@string/search_task_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/searchTaskPhoto"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:adjustViewBounds="false"
                android:background="@drawable/image_border"
                android:cropToPadding="false"
                app:srcCompat="@android:color/background_light" />

            <TextView
                android:id="@+id/searchTaskDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/searchTaskLowestBid"
                android:layout_alignTop="@+id/searchTaskTitle"
                android:layout_marginStart="13dp"
                android:layout_marginTop="29dp"
                android:layout_toEndOf="@+id/searchTaskPhoto"
                android:maxHeight="98dp"
                android:text="@string/task_search_description"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/searchTaskLowestBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/searchTaskPhoto"
                android:text="@string/lowest_bid"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/searchedTasksMyBidOnTask"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/searchTaskLowestBid"
                android:layout_alignTop="@+id/searchTaskLowestBid"
                android:layout_alignParentEnd="true"
                android:paddingLeft="30dp"
                android:text="@string/my_bid"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/searchedTaskStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingEnd="5dp"
                android:paddingTop="1dp" />

            <TextView
                android:id="@+id/searchedTaskUsername"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignStart="@+id/searchTaskTitle"
                android:layout_below="@+id/searchedTaskStatusIcon"
                android:text="Username" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

