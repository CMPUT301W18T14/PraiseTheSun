<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.ualbert.cs.tasko.RatingActivity">
    <TextView
        android:id="@+id/Rating_Activity_Instruction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please give so and so a rating!"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rating_Activity_Instruction_textview"
        android:id="@+id/Rating_Activity_Rating_Bar"
        android:numStars="5"
        android:stepSize="0.5"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rating_Activity_Rating_Bar"
        android:id="@+id/Rating_Activity_Submit_Button"
        android:text="SUBMIT"/>

</RelativeLayout>
